<Button>:
    font_size: 40
    color: 0.6, 0.6, 0.7, 1
    size_hint: 0.3, 0.2

<FloatLayout>:
    Button:
        pos_hint: {"x":0.5, "top":0.25}
        text: "Yash"

    Button:
        id: btn
        pos_hint: {"x":0.5, "top":0.75}
        text: "Gupta" if btn.state == "normal" else "Pressed"
        background_color: 0.3, 0.4, 0.5, 1